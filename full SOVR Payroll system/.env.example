# WARNING: Do not commit the .env file with real secrets. This is an example.

# --- Wallet Keys ---
# Used for deploying contracts and initial setup. HIGH-PRIVILEGE.
DEPLOYER_PRIVATE_KEY=0x...
# Used by the off-chain listener for burning tokens. LOW-PRIVILEGE.
OPERATOR_PRIVATE_KEY=0x...
# Used by the demo script to claim salary.
EMPLOYEE_PK=0x...

# --- API Keys & URLs ---
RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY
STRIPE_SECRET_KEY=YOUR_STRIPE_SECRET_KEY
# For production, use a live key: STRIPE_SECRET_KEY=sk_live_...

# --- Operational Controls ---
# Set to "halt" to disable all payout processing in the Consul listener.
CONSUL_MODE=active

# --- Database (PostgreSQL) ---
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=sovr_payroll